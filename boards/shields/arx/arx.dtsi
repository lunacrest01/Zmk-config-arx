#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-direct";
        wakeup-source;

        input-gpios =
            <&gpio0  6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* Switch 1 */
            <&gpio0  8  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* Switch 2 */
            <&gpio0 17  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* Switch 3 */
            <&gpio0 20  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* Switch 4 */
            <&gpio0 22  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* Switch 5 */
            <&gpio0 24  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* Switch 6 */
            <&gpio1  0  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* Switch 7 */
            <&gpio0 11  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* Switch 8 */
            <&gpio1  4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;  /* Switch 9 */
    };

    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <9>;
        rows = <1>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
            RC(0,5) RC(0,6) RC(0,7) RC(0,8)
        >;
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "arx Layout";

        kscan = <&kscan0>;
        transform = <&default_transform>;

        keys =
            <&key_physical_attrs 100 100    0    0 0 0 0>,   /* Switch 1 */
            <&key_physical_attrs 100 100  100    0 0 0 0>,   /* Switch 2 */
            <&key_physical_attrs 100 100  200    0 0 0 0>,   /* Switch 3 */
            <&key_physical_attrs 100 100    0  100 0 0 0>,   /* Switch 4 */
            <&key_physical_attrs 100 100  100  100 0 0 0>,   /* Switch 5 */
            <&key_physical_attrs 100 100  200  100 0 0 0>,   /* Switch 6 */
            <&key_physical_attrs 100 100    0  200 0 0 0>,   /* Switch 7 */
            <&key_physical_attrs 100 100  100  200 0 0 0>,   /* Switch 8 */
            <&key_physical_attrs 100 100  200  200 0 0 0>;   /* Switch 9 */
    };
    
     left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio1  6 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0  9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "okay";
    };

        sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder>;
        triggers-per-rotation = <20>;
    };
};
