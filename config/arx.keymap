#define DEFAULT 0
#define LAYER1  1
#define LAYER2  2
#define LAYER3  3

/ {
    keymap {
        compatible = "zmk,keymap";

        // Layer 0 → Red
        default_layer {
            bindings = <&kp A      &kp B      &kp C
                        &kp D      &kp E      &kp F
                        &kp G      &kp H      &to LAYER1>;
        };

        // Layer 1 → Green
        layer_1 {
            bindings = <&kp LEFT   &kp DOWN   &kp UP
                        &kp RIGHT  &kp HOME   &kp END
                        &kp PG_UP  &kp PG_DN  &to LAYER2>;
        };

        // Layer 2 → Blue
        layer_2 {
            bindings = <&kp C_PLAY_PAUSE  &kp C_PREV   &kp C_NEXT
                        &kp C_MUTE        &kp C_VOL_DN &kp C_VOL_UP
                        &kp EXCLAMATION   &kp QUESTION &to LAYER3>;
        };

        // Layer 3 → White (Bluetooth)
        layer_3 {
            bindings = <&bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2
                        &bt BT_SEL 3    &bt BT_CLR      &bt BT_CLR_ALL
                        &trans          &trans          &to DEFAULT>;
        };
    };

    // RGB underglow per-layer colors
    rgb_underglow {
        compatible = "zmk,rgb-underglow-layers";
        layer0 { color = <255 0 0>; };   // Red
        layer1 { color = <0 255 0>; };   // Green
        layer2 { color = <0 0 255>; };   // Blue
        layer3 { color = <255 255 255>; }; // White
    };
};
